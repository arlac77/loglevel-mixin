    "chai": "3.5.0",
    "coveralls": "2.11.11",
    "cracks": "3.1.2",
    "cz-conventional-changelog": "1.1.6",
    "istanbul": "0.4.4",
    "jsdoc": "3.4.0",
    "mocha": "2.5.3",
    "semantic-release": "6.3.0"
  },
  "keywords": [
    "loglevel"
  ],
  "author": "Markus Felten <markus.felten@gmx.de>",
